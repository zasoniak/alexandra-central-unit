<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.kms.alexandracentralunit"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.kms.alexandracentralunit.AdminActivity"
            android:label="@string/title_activity_admin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="com.kms.alexandracentralunit.CoreService"
            android:enabled="true"
            android:exported="true">
        </service>

        <receiver
            android:name="com.kms.alexandracentralunit.Autostart"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service android:name="com.kms.alexandracentralunit.data.SyncService">
        </service>
        <service android:name="com.kms.alexandracentralunit.data.FirebaseSyncService">
        </service>


        <service android:name=".ScheduleManagerService">
        </service>
        <service android:name=".ScheduleService">
        </service>

        <receiver android:name=".ScheduleReceiver">
        </receiver>


        <receiver android:name="com.kms.alexandracentralunit.HistorianBroadcastReceiver">
        </receiver>

        <service
            android:name=".ControlMessageDispatcher">
        </service>
        <service
            android:name=".FirebaseControlMessageDispatcher">
        </service>
    </application>

</manifest>